<%- include("../partials/header") %>

<form action="/login" method="POST" class="form">
	<h1 class="form__header">Logowanie</h1>
	
	<%- include("../partials/messages") %>
	
	<div class="form__input-group">
		<input class="form__input" name="username" type="text" required="required" pattern=".{3,}" title="3 characters minimum"/>
		<span class="form__input-placeholder" data-placeholder="Nazwa użytkownika"></span>
	</div>
	<div class="form__input-group">
		<input class="form__input" name="password" type="password" required="required" pattern=".{3,}" title="3 characters minimum"/>
		<span class="form__input-placeholder" data-placeholder="Hasło"></span>
	</div>
	
	<a href="/forgot" class="input-link button button--exit">Nie pamiętam hasła</a>

	<button type="submit" class="form__button button button--form">Zaloguj się</button>
	
	<a href="/" class="form button button--exit"><i class="fas fa-arrow-left"></i> Wróć</a>
</form>

<%- include("../partials/footer") %>