<%- include("../partials/header") %>

<form action="/auth" method="POST" class="form">
	<h1 class="form__header">Podaj adres email</h1>
	
	<%- include("../partials/messages") %>
	
	<div class="form__input-group">
		<input class="form__input" name="email" type="email" required="required"/>
		<span class="form__input-placeholder" data-placeholder="Email"></span>
	</div>

	<button type="submit" class="form__button button button--form">Wyślij</button>
	
	<a href="/" class="form__exit button button--exit"><i class="fas fa-arrow-left"></i> Wróć</a>
</form>

