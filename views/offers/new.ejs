<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/framework/form.css">
<link rel="stylesheet" href="/stylesheets/offers/new.css">

<div class="container">	
	<form class="myui-form" action="/offers" method="POST">
		<h1>Dodaj ogłoszenie</h1>
		<%- include("../partials/messages") %>
		<div class="form-field">
			<input type="url" aria-describedby="link" name="link" required>
			<span data-placeholder="Link do ogłoszenia"></span>
		</div>
		
		<div class="form-field">
			<input type="text" aria-describedby="title" name="title">
			<span data-placeholder="Twój tytuł ogłoszenia"></span>
		</div>
		
	  	<button type="submit" class="button btn-update btn-fine btn-form">Dodaj</button>
		
		<a href="/offers" class="form shadow-btn"><i class="fas fa-arrow-left"></i> Wróć</a>
	</form>
</div>

<script src="/js/framework/form.js"></script>
