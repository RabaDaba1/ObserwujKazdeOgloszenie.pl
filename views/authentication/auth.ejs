<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/framework/form.css">

<form action="/auth" method="POST" class="form">
	<h1 class="form__header">Podaj adres email</h1>
	
	<%- include("../partials/messages") %>
	
	<div class="form__input-group">
		<input class="form__input" name="email" type="email" required="required"/>
		<span class="form__input-placeholder" data-placeholder="Email"></span>
	</div>

	<button type="submit" class="form__button button button--default">Wyślij</button>
	
	<a href="/" class="button--exit button--shadow"><i class="fas fa-arrow-left"></i> Wróć</a>
</form>

<script src="/js/framework/form.js"></script>
