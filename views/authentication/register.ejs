<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/framework/form.css">

<form action="/register" method="POST" class="myui-form">
	<h1>Rejestracja</h1>
	
	<%- include("../partials/messages") %>
	
	<div class="form-field">
		<input name="username" type="text" required="required"/>
		<span data-placeholder="Nazwa użytkownika"></span>
	</div>
	<div class="form-field">
		<input name="email" type="email" required="required"/>
		<span data-placeholder="Email"></span>
	</div>
	<div class="form-field">
		<input name="password" type="password" required="required"/>
		<span data-placeholder="Hasło"></span>
	</div>
	<div class="form-field">
		<input name="confirmedPassword" type="password" required="required"/>
		<span data-placeholder="Powtórz hasło"></span>
	</div>
	
	<button type="submit" class="button btn-fine btn-form">Zarejestruj się</button>
	
	<a href="/" class="form shadow-btn"><i class="fas fa-arrow-left"></i> Wróć</a>
</form>

<script src="/js/framework/form.js"></script>
<%- include("../partials/footer") %>