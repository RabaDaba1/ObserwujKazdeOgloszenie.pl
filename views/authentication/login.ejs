<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/framework/form.css">

<form action="/login" method="POST" class="form">
	<h1 class="form__header">Logowanie</h1>
	
	<%- include("../partials/messages") %>
	
	<div class="form__input-group">
		<input class="form__input" name="username" type="text" required="required" pattern=".{3,}" title="3 characters minimum"/>
		<span class="form__input-placeholder" data-placeholder="Nazwa użytkownika"></span>
	</div>
	<div class="form__input-group">
		<input class="form__input" name="password" type="password" required="required" pattern=".{3,}" title="3 characters minimum"/>
		<span class="form__input-placeholder" data-placeholder="Hasło"></span>
	</div>
	
	<a href="/forgot" class="button--shadow">Nie pamiętam hasła</a>

	<button type="submit" class="form__button button button--default">Zaloguj się</button>
	
	<a href="/" class="button--shadow button--exit"><i class="fas fa-arrow-left"></i> Wróć</a>
</form>

<script src="/js/framework/form.js"></script>
<%- include("../partials/footer") %>