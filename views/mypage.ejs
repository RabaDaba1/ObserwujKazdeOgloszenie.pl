<%- include("./partials/header") %>
<link rel="stylesheet" href="/stylesheets/mypage.css">

<div class="mycontainer">
	<section class="profile">
		<p id="directory">Moja strona • <%= currentUser.username %> </p>
		<div class="mybox">
			<img src="https://images.unsplash.com/photo-1583655007812-89dae4370ccb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80" alt="" class="profile-img">
			<div id="profile-text">
				<h1>Miło Cię widzieć, <%= currentUser.username %>!</h1>
				<p>Zobacz czy znaleźliśmy coś w twoich ogłoszeniach</p>
			</div>
			<div id="profile-buttons">
				<a href="/myprofile" class="button-simple">Mój profil</a>
				<a href="/offers" class="button-simple">Moje ogłoszenia</a>
			</div>
		</div>
	</section>

	<section class="data">
		<div class="row">
			<div class="col-lg-7">
				<div class="row">
					<div class="col-lg-6">
						<div class="mybox" id="offers-added">
							<p>Liczba ogłoszeń</p>
							<h1>7/25</h1>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="mybox" id="week-change-count">
							<p>Liczba zmian w ostatnim tyg.</p>
							<h1>7</h1>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6">
						<div class="mybox" id="unseen-changes">
							<p>Zmiany do zobaczenia</p>
							<h1>2</h1>
						</div>
					</div>
					<div class="col-lg-6">
						<div class="mybox" id="when-last-change">
							<p>Ostatnia zmiana</p>
							<h1>Wczoraj</h1>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-5">

			</div>
		</div>
	</section>
</div>

<%- include("./partials/footer") %>